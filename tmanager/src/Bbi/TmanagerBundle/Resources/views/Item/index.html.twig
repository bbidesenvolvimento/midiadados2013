{% extends '::base.html.twig' %}

{% block body %}
<h1>Itens do Segmento</h1>

<ul>
    <li>
        <a href="{{ path('item_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

<select id="cats">
    {% for entity in entitiescat %}
    <option value="{{ path('item', {'cat' : entity.id} ) }}">
        {{ entity.segmento}}
    </option>
    {% endfor %}
</select>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Link</th> 
            <th>Actions</th>
        </tr>
    </thead>
    {% for entity in entities %}
    <tr>
        <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.titulo }}</td>
        <td>{{ entity.link }}</td> 
        <td>
            <ul>
                <li>

                    <a href="{{ path('item_show', { 'id': entity.id }) }}">show</a>
                </li>
                    <li>
                    <a href="{{ path('item_edit', {'id': entity.id }) }}">
                    <i class="icon-edit"></i>Editar</a>
                </li>
            </ul>
        </td>
    </tr>
    {% endfor %}
</table>

