{% extends '::base.html.twig' %}

{% block body %}
<h1>Item list</h1>

<ul>
    <li>
        <a href="{{ path('item_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Link</th> 
            <th>Actions</th>
        </tr>
    </thead>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.titulo }}</td>
            <td>{{ entity.link }}</td> 
            <td>
                <ul>
                    <li>
                        <a href="{{ path('item_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('item_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
</table>


{% endblock %}